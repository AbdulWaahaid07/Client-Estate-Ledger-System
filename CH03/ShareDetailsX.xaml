<UserControl x:Class="CH03.ShareDetailsX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:CH03"
             mc:Ignorable="d" 
             d:DesignHeight="680" d:DesignWidth="1200">



    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical" Width="230">

            <Button x:Name="p01" Content="Share Capital&#xa;      Entry"  Margin="12" Foreground="#DDFFFFFF" Height="139" FontSize="22" />


        </StackPanel>

        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="620" />
                <ColumnDefinition Width="310" />
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="materialDesign:PackIcon">
                    <Setter Property="Width" Value="30"></Setter>
                    <Setter Property="Height" Value="30"></Setter>
                </Style>
            </Grid.Resources>


            <ScrollViewer>
                <Grid Grid.Column="0" Background="#F7F6F8" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" UseLayoutRounding="True" HorizontalAlignment="Left">
                    <StackPanel Margin="10" >
                        <!--<Grid Height="60">
                            <materialDesign:ColorZone Mode="Accent" Padding="16" Background="{x:Null}" VerticalAlignment="Center" Margin="0,0,0,-28" Height="88" >
                                <Button x:Name="p1" Content="Share Capital Entry" Margin="0,0,349,21" Foreground="#DDFFFFFF" />
                            </materialDesign:ColorZone>



                        </Grid>-->


                        <StackPanel Width="230"/>

                        <materialDesign:Card Margin="30 20" UniformCornerRadius="20" HorizontalAlignment="Left">
                            <StackPanel>
                                <Grid>



                                    <TextBlock Margin="20" HorizontalAlignment="Left"  FontWeight="SemiBold" Text="Members Information" FontSize="18"/>
                                    <WrapPanel Orientation="Horizontal" Margin="30 50">
                                        <TextBox x:Name="memno" materialDesign:HintAssist.Hint="Member Number" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Width="130" Margin="10,0,0,0" />
                                        <TextBox x:Name="memnm" materialDesign:HintAssist.Hint="Member Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="230" HorizontalAlignment="Center" Margin="20,0,0,0" />
                                        <TextBox x:Name="dsgn" materialDesign:HintAssist.Hint="Designation" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Width="120" Margin="10,0,0,0" />
                                        <TextBox x:Name="unin" materialDesign:HintAssist.Hint="Union" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Width="230" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" />


                                    </WrapPanel>

                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card Margin="30 20" UniformCornerRadius="20" HorizontalAlignment="Center">
                            <StackPanel>
                                <Grid>



                                    <TextBlock Margin="20" HorizontalAlignment="Left"  FontWeight="SemiBold" Text="Details of Shares" FontSize="18"/>
                                    <WrapPanel Orientation="Horizontal" Margin="30 50">

                                        <TextBox x:Name="rcptno" materialDesign:HintAssist.Hint="Recipt Number" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Width="110" Margin="10,0,0,0" />
                                        <TextBox x:Name="rcptdt" materialDesign:HintAssist.Hint="Recipt Date" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="160" HorizontalAlignment="Center" Margin="20,0,0,0" />
                                        <TextBox x:Name="mode" materialDesign:HintAssist.Hint="Mode" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Margin="10,0,0,0" Width="70" />
                                        <TextBox x:Name="amnt2" materialDesign:HintAssist.Hint="Amount" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Width="120" RenderTransformOrigin="0.5,0.5" Margin="10,0,0,0" />
                                        <TextBox x:Name="chkno" materialDesign:HintAssist.Hint="D.D./Cheque Number" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Width="230" Margin="20,0,0,0" />
                                        <TextBox x:Name="bnk2" materialDesign:HintAssist.Hint="Bank Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" Width="410" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="20,0,0,0" />


                                    </WrapPanel>

                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <StackPanel Background="White" Grid.ColumnSpan="2" Margin="590,0,0,0" Width="280">
                <WrapPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20 20 20 10">
                    <Button Style="{DynamicResource MaterialDesignFloatingActionMiniButton}" materialDesign:ShadowAssist.ShadowDepth="Depth3" RenderTransformOrigin="0.5,0.5" Background="#FFF5A032" BorderBrush="White" Foreground="#FF686868" Click="Close_Click">
                        <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </WrapPanel>
                <Border Margin="40,40,40,40" CornerRadius="20" Height="280">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF8DCAB"/>
                            <GradientStop Color="#FFF59A27" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Image Source="Images/cartoon-woman-pretty.png"  Stretch="Uniform" x:Name="ImgCartoon" Height="150" Width="150" />


                </Border>
                <WrapPanel Orientation="Horizontal" >
                    <Button  x:Name="prv" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" HorizontalAlignment="Left" Margin="14,0,0,0" VerticalAlignment="Bottom"  >
                        <Button.Background>
                            <SolidColorBrush Color="#FFFF9800" Opacity="0"/>
                        </Button.Background>
                        <materialDesign:PackIcon Kind="ChevronLeft" />
                    </Button>
                    <TextBox x:Name="mid" materialDesign:HintAssist.Hint="Member ID"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="140" FontSize="22" VerticalAlignment="Stretch" Margin="15,0,0,0" Height="51" HorizontalContentAlignment="Center" />
                    <!--Text="{Binding ElementName=memno, Path=Text, Mode=TwoWay}"-->
                    <Button x:Name="nxt" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="15,0,0,0" VerticalAlignment="Bottom"   >
                        <Button.Background>
                            <SolidColorBrush Color="#FFFF9800" Opacity="0"/>
                        </Button.Background>
                        <materialDesign:PackIcon Kind="ChevronRight" />
                    </Button>
                </WrapPanel>
                <StackPanel Orientation="Vertical">
                    <Button x:Name="btnupdate"
                        Content="Update Info" IsTabStop="False"
                        Width="120"  Background="#FFF6F6F8" IsDefault="True" Height="35" Margin="0,51,0,0" >
                        <!--PreviewMouseLeftButtonDown="btnupdate_Click" line 159 after btnupdate-->
                        <Button.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFF8DCAB"/>
                                <GradientStop Color="#FFF59A27" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.BorderBrush>
                    </Button>
                    <Button x:Name="btndelete" Content="Delete Record" Width="130" Background="#FFF6F6F8" Height="35" Margin="0,20,0,0" >
                        <Button.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFF8DCAB"/>
                                <GradientStop Color="#FFF59A27" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.BorderBrush>
                    </Button>



                </StackPanel>


            </StackPanel>



        </Grid>
    </StackPanel>

</UserControl>